
// problem 1064 = // problem 1053 = Positive Numbers
// Programmed by: Abdullah Al Mamun

// Lets's start..

#include <stdio.h>
#include <stdlib.h>

int main ()
{
    double n,T=0;
    int i,counter = 0;
    for (i=0;i<6;i++)
    {
        scanf("%lf",&n);
        
        if(n>0)
        {  counter ++;
        T+=n;
        }
    }
    T=T/counter;
    printf("%d valores positivos\n",counter);
    printf("%.1f\n",T);
    return 0;
}

