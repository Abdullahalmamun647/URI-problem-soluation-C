// Lets's start..

#include <stdio.h>
#include <stdlib.h>

int main ()       /* Rules for triangle is : if sum of two element is greater than another                   one that will be triagle */
{
    double a,b,c,Perimetro,area;
    scanf("%lf %lf %lf",&a,&b,&c);
    
    if (a< (b+c) && b<(a+c) && c< (b+c)){
        Perimetro=a+b+c;
        printf("Perimetro = %.1f\n",Perimetro);
        
    }
    else
    {
        area=((a+b)*c)/2;
        printf("Area = %.1f\n",area);
    }

    
    
    return 0;
}
